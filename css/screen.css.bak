@media screen
and (min-width: 480px)
and (max-width: 720px) {
  form {
      background-color: lightgray;
      display: inline-block;
      text-align: center;
      height: 100%;
      width: 80%;
  }
}

html, body {
  height: 100%;
  width: 100%;
  margin: 5px;
}

body {
  font-family: 'Courier New', Courier, monospace;
  background-color: whitesmoke;
}

p, h1, ol, label, input, #content {
  text-align: center;
  margin: 12px;
}

form {
  margin-top: 10%;
  background-color: lightgray;
  display: inline-block;
}

input {
  box-sizing: border-box; 
  width: 60%; 
}

#age-verification {
  box-sizing: border-box;
  width: 4%;
}